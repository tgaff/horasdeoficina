<!DOCTYPE html>
<html>
<head>
  <title>UsualSuspects</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="row">
    <ul class="hmenu">
     <%= render 'devise/menu/registration_items' %>
     <%= render 'devise/menu/login_items' %>
   </ul>
  </div>
  <div class="row">
    <% flash.each do |name, msg| %>
      <% msg = [msg] unless msg.class == Array %>
        <% msg.each do |message| %>
          <%= content_tag :div, message, :id => "flash_#{name}", class: 'alert alert-info' %>
        <% end %>
      <% end %>
    <%= yield %>
  </div>
</div>
</body>
</html>
