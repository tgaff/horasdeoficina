      start: parseFromWTBTime('<%= wtb.dotw %>', '<%= wtb.from.strftime("%H:%M") %>'),
      end: parseFromWTBTime('<%= wtb.dotw %>', '<%= wtb.to.strftime("%H:%M")%>')
