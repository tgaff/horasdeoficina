<h1>Listing Courses</h1>

<% teaching_courses = as_an_educator(@courses) %>
<% if teaching_courses.length > 0  %>
  <%= render partial: 'course_list', locals:
    { heading: 'Teaching', specific_courses: teaching_courses } %>
<% end %>

<% learning_courses = as_a_student(@courses) %>
<% if learning_courses.length > 0  %>
  <%= render partial: 'course_list', locals:
    { heading: 'Learning', specific_courses: learning_courses } %>
<% end %>



